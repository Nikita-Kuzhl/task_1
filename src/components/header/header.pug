include ../../views/helpers/mixins
block variables
  - var navLinks = [{ link: '#', name: 'Каталог товаров' },{ link: '#', name: 'Доставка и оплата' },{ link: '#', name: 'Цены' },{ link: '#', name: 'Контакты' },]


header.header
  .header__logo
    img(src="./assets/images/Logo.svg" alt="logo") 
  .header__burger-menu
    img(src="./assets/images/burger menu.svg")
  nav.header__nav
    ul.nav
      for i in navLinks
        li.nav__item
          a(href=i.link).nav__link=i.name 
  .header__tel
    a <span>+7 (812)</span> 509 21 98
  h1.header__call-me ПЕРЕЗВОНИТЬ МНЕ
  .header__contact
    +spriteIcons("contact__icon")
  .header__actions
    a.header__search-icon
      img(src="./assets/images/loupe 1.svg")
    a.header__favorites-icon
      img(src="./assets/images/Vector.svg")
    .header__shopping-cart
      .shopping-cart__icon
        img(src="./assets/images/shopping-cart 1.svg")
      span.shopping-cart__count 10
    
      
